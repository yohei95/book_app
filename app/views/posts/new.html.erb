<% provide(:title, "新規投稿") %>

<div class="container">
  <h1>新規投稿</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with model: @post, local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %> 
      <div class = 'form-group'>
        <%= f.label :本のタイトル %>　※必須
        <%= f.text_field :title, class: 'form-control', id: 'book_title' %>
      </div>
      <div class = 'form-group'>
        <%= f.label :'To Do' %>　※必須
        <%= f.text_field :plan, class: 'form-control', id: 'book_plan' %>
      </div>
        <div class = 'form-group'>
        <%= f.label :メモ %>　※任意
        <%= f.text_field :memo,  class: 'form-control', id: 'book_memo' %>
      </div>
      <div>
        <p class= "form-title">#タグ　※任意　半角スペース区切りで複数入力できます</p>
        <%= f.text_field :tag_name, placeholder: "例）プログラミング Ruby", class: 'form-control' %>
      </div>
      <div class = 'form-group'>
      <%= f.label :Amazonリンク %>　※任意
      <%= f.text_field :reference, class: 'form-control', id: 'book_reference' %>
      </div>
      <div class = 'form-group'>
      <%= f.label :画像 %>　※任意
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
      <%= f.submit "投稿する", class: 'btn btn-primary' %>
    <% end %>
    </div>
  </div>
</div>