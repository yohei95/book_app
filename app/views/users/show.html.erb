<<% provide(:title, "プロフィール") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
<h1>プロフィール</h1>
<%= gravatar_for @user %><br>
<%= @user.id %>, <%= @user.name %>, <%= @user.email %><br>
<%= @user.created_at %>, <%= @user.updated_at %><br>
    </section>
  </aside>
</div>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
